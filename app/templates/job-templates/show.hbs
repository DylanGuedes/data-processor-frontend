<div class="job-templates-show">
  <div class="ui inverted segment">
    <h1 class="ui header center aligned">
      {{this.model.title}}
    </h1>
  </div>

  <div class="ui center aligned grid">
    <div class="four wide column action-panel">
      <div class="ui inverted segment raised action-buttons">
        <VerticalJobTemplateActionButton @routeToLink={{"job-templates.show.extra_info"}} @color={{"purple"}} />

        <div class="ui inverted divider"></div>

        <VerticalJobTemplateActionButton @routeToLink={{"job-templates.show.actions"}} @color={{"violet"}} />

        <div class="ui inverted divider"></div>

        <VerticalJobTemplateActionButton @routeToLink={{"job-templates.show.schema_params"}} @color={{"red"}} />

        <div class="ui inverted divider"></div>

        <VerticalJobTemplateActionButton @routeToLink={{"job-templates.show.interscity_params"}} @color={{"brown"}} />

        <div class="ui inverted divider"></div>

        <VerticalJobTemplateActionButton @routeToLink={{"job-templates.show.functional_params"}} @color={{"black"}} />
      </div>
    </div>

    <div class="twelve wide stretched column main-stuff">
      <div class="ui raised segment">
        {{outlet}}
      </div>
    </div>
  </div>
</div>
