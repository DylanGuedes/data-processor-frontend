<h2>Available Templates</h2>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
      <th>Rating</th>
      <th>Clones</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |tl|}}
      <tr>
        {{#intro-js/step step=2 intro="Pick a template"}}
          <td class="single line">{{#link-to "job-templates.show" tl.id}}{{tl.title}}{{/link-to}}</td>
        {{/intro-js/step}}
        <td class="collapsing">{{spark-template-actions-panel tl=tl}}</td>
        <td>
          {{ui-rating
          initialRating=rating
          rating=rating
          maxRating=10
          onRate=(action (mut rating))}}
        </td>
        <td>{{tl.scheduledJobs}}</td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th>{{#link-to "job-templates.new" tagName="button" class="large ui green button"}}New Template{{/link-to}}</th>
      <th colspan="5">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr>
  </tfoot>
</table>
