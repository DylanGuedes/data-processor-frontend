<h1 class="ui header center aligned">Available Templates</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>
        {{#ui-popup html="(TODO) <b>Schedule</b>: Instantiate a new job that uses this template params for execution."}}
          [S]
        {{/ui-popup}}
      </th>
      <th>
        {{#ui-popup html="(TODO) <b>Clone</b>: create a new template using this template as base."}}
          [C]
        {{/ui-popup}}
      </th>
      <th>
        {{#ui-popup html="<b>Edit</b>: Edit this template params."}}
          [E]
        {{/ui-popup}}
      </th>
      <th>
        {{#ui-popup html="(TODO) <b>Remove</b>: Remove this template. Forever."}}
          [R]
        {{/ui-popup}}
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each this.model as |tl|}}
      <tr>
        {{#intro-js/step step=2 intro="Pick a template"}}
          <td class="single line">{{#link-to "job-templates.show" tl.id}}{{tl.title}}{{/link-to}}</td>
        {{/intro-js/step}}
        <td>{{job-template-action-button size="small" color="green" icon="plus"}}</td>
        <td>{{job-template-edit-button templateId=tl.id}}</td>
        <td>{{job-template-action-button size="small" color="gray" icon="clone"}}</td>
        <td>{{job-template-action-button size="small" color="red" icon="close"}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{#link-to "job-templates.new" tagName="button" class="large ui green button"}}New Template{{/link-to}}
